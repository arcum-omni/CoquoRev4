@model CoquoRev4.Models.Ingredient

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Ingredient</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.IngredientName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.IngredientName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.IngredientDescription)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.IngredientDescription)
		</dd>

		@* Add what dish ingredient is cooked into...
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Cooks)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Cooks)
		</dd>
		*@

		<dt class="col-sm-2">
			Dishes:
		</dt>
		<dd class="col-sm-10">
			@{
				List<string> dishes = (from a in Model.Cooks
											select a.Dish.DishName).ToList();

				foreach (string i in dishes)
				{
					@i<br />
				}
			}
		</dd>

	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.IngredientID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
