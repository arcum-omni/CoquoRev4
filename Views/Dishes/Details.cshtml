@model CoquoRev4.Models.Dish

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Dish</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DishName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DishName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DishDescription)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DishDescription)
		</dd>

		<dt class="col-sm-2">
			Ingredient:
		</dt>
		<dd class="col-sm-10">
			@{
				List<string> ingredients = (from a in Model.Cooks
											select a.Ingredient.IngredientName).ToList();

				foreach (string i in ingredients) {
					@i<br />
				}
			}
		</dd>

	</dl>
</div>

<div>
	<a asp-action="Edit" asp-route-id="@Model.DishID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
