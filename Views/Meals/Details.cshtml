@model CoquoRev4.Models.Meal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meal</h4>
    <hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MealName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.MealName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MealDescription)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.MealDescription)
		</dd>

		<dt class="col-sm-2">
			Dishes:
		</dt>
		<dd class="col-sm-10">
			@{
				List<string> dishes = (from a in Model.Serves
											select a.Dish.DishName).ToList();

				foreach (string i in dishes)
				{
					@i<br />
				}
			}
		</dd>

	</dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MealID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
